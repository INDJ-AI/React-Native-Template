{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "typeRoots": ["./src/types/*"],
    "paths": {
      "@/*": ["./*"],
      "@/apis/*": ["apis/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/configs/*": ["configs/*"],
      "@/containers/*": ["containers/*"],
      "@/hooks/*": ["hooks/*"],
      "@/redux/*": ["redux/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/views/*": ["views/*"]
    }
  }
}
